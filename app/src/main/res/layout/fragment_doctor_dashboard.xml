<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:background="@color/gray_light">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="@dimen/space_4"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UCK"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/text_xl"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/space_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uniwersyteckie"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_xs" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Centrum Kliniczne"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_xs" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/space_4"
                android:gravity="end">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imię Nazwisko"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lekarz"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_sm" />
            </LinearLayout>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="@dimen/space_2"
                android:textColor="@color/gray_dark"
                android:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:padding="@dimen/space_2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Body -->
    <LinearLayout
        android:id="@+id/dashboard_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/space_4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctor_panel"
                android:textSize="@dimen/text_2xl"
                android:textColor="@color/gray_dark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_subtitle"
                android:textSize="@dimen/text_lg"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_4"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_4"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/patient_list"
                        android:textSize="@dimen/text_lg"
                        android:textColor="@color/gray_dark"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:hint="@string/search_patient"
                        app:startIconDrawable="@drawable/ic_search">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/search_input"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:imeOptions="actionSearch" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/patient_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:padding="@dimen/space_2" />

                <TextView
                    android:id="@+id/empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/no_patients"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_lg"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/loading_view"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_light" />

                <!-- Pagination -->
                <LinearLayout
                    android:id="@+id/pagination_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_4"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/pagination_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Strona 1 z 1 (0 wyników)"
                        android:textSize="@dimen/text_sm"
                        android:textColor="@color/gray_dark" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/items_per_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/items_per_page"
                            android:layout_marginEnd="@dimen/space_4" />

                        <Button
                            android:id="@+id/prev_page"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_back"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="@dimen/space_1" />

                        <LinearLayout
                            android:id="@+id/pagination_pages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!-- Strony będą generowane dynamicznie -->
                        </LinearLayout>

                        <Button
                            android:id="@+id/next_page"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_back"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:rotation="180"
                            android:layout_marginStart="@dimen/space_1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>
