<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BariatricMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.BariatricMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BariatricMobile.Splash" parent="Theme.BariatricMobile.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
